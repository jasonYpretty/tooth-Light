/* pages/main/main.wxss */

page {
  height: 100%;
}

.card1 {
  color: #fff;
  padding: 20rpx 10rpx;
  font-size: 50rpx;
  font-weight: 300;
  transform: skew(-10deg, 0deg);
}
.card1::before {
  
  content: "";
  position: absolute;
  width: 160rpx;
  height: 6rpx;
  border-radius: 20rpx;
  background-color: #fff;
  display: block;
  top: 86rpx;
  left: 80rpx;
  transform: skew(10deg, 0deg);
}

.colorG {
  position: absolute;
  left: 170rpx;
  width: 50rpx;
  height: 40rpx;
  border: 3rpx solid #666;
}

.connected_info {
  height: 10%;
}

.color-picker-square {
  background: black;
}

.color-picker-square .wrapper .flex {
  display: flex;
  position: relative;
  width: 600rpx;
  padding: 30rpx;
  background: #fff;
}

.color-picker-square .wrapper .row {
  display: row;
  position: relative;
  width: 600rpx;
  padding: 30rpx;
  background: #fff;
}

.color-picker-square .wrapper .flex .color {
  position: absolute;
  right: 60rpx;
  width: 150rpx;
  height: 150rpx;
  border: 3rpx solid #666;
}

.color-picker-square .wrapper.wrapper-absolute .color-picker-wrapper {
  padding: 10rpx;
  background: #fff;
  right: 20rpx;
  top: 115rpx;
  z-index: 10;
  box-shadow: 1rpx 1rpx 12rpx 8rpx #ccc;
}

.color-picker-square .wrapper.wrapper-relative .color-picker-wrapper {
  position: relative;
  z-index: 10;
  background: #fff;
  padding: 25rpx;
  display: flex;
  justify-content: center;
}

.color-picker-square .mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 10%;
  z-index: 10;
  background: transparent;
}
